{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "nodejs boilerplate with, Express, mocha, chia, istanbul, webpack, nodemon, eslint, babel",
  "main": "app/server.js",
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "include": [
      "app/**/*.js"
    ],
    "exclude": [
      "test/**/*.spec.js",
      "app/server.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "cache": true,
    "all": true
  },
  "scripts": {
    "start": "nodemon app/server.js --exec babel-node --presets es2015,stage-2",
    "babel-build": "babel app -d dist",
    "serve": "node build/backend.js",
    "test": "nyc mocha",
    "build": "webpack"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.2"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.17.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "nodemon": "^1.14.12",
    "nyc": "^11.4.1",
    "source-map-support": "^0.5.3",
    "webpack": "^3.10.0"
  }
}
